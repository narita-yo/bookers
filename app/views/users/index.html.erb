<div class='row'>
  <div class='col-xs-3'>
    <h2>User info</h2>
    <table class='table'>
      <tr><%= attachment_image_tag @user, :profile_image, :fill, 60, 60, format: 'jpeg', class: "img-circle pull-left profile-img", fallback: "no_image.jpg" %></tr>
      <tr>
        <th>name</th>
        <th><%= @user.name %></th>
      </tr>
      <tr>
        <th>introduction</th>
        <th><%= @user.introduction %></th>
      </tr>
    </table>

    <div class='row'>
      <%= link_to "", edit_user_path(@user), class: "col-xs-12 btn btn-default glyphicon glyphicon-wrench edit_user_" << @user.id  %>
    </div>

    <h2>New book</h2>
  <%= form_for(@book,url: books_path) do |f| %>
      <%= f.hidden_field :user_id, :value => @user.id %>
      <div class="field row">
        <label for="book_title">Title</label>
      <%= f.text_field :title, class: "col-xs-12 book_title", id:"book_title"%>
      </div>
      <div class="field row">
        <label for="book_opinion">Opinion</label>
      <%= f.text_area :body, class: "col-xs-12 book_body", id:"book_title" %>
      </div>
       <div class="actions row">
      <%= f.submit 'Create Book', class: "btn btn-primary col-xs-12" %>
      </div>
  <% end %>
  </div>

  <div class='col-xs-9'>
    <h2>Books</h2>

    <table class='table table-hover table-inverse'>
      <thead>
        <tr>
          <th>image</th>
          <th>name</th>
          <th></th>
          <th colspan="3"></th>
        </tr>
      </thead>
      <tbody>
<% @users.each do |user| %>
        <tr>
          <td><a href="/users/<%= user.id %>"><%= attachment_image_tag user, :profile_image, :fill, 60, 60, class: "img-circle pull-left profile-thumb", fallback: "no_image.jpg"%></a></td>
          <td><%= user.name %></td>
          <td>
          	<%= link_to 'Show', user_path(user) %>
            <%# link_to "Edit", edit_book_path(book), class:"btn-sm btn-success edit_book_" << book.id %>
            <%# link_to "Destroy", book_path(book), method: :delete ,class:"btn-sm btn-danger destroy_book_" << book.id %>
          </td>
        </tr>
<% end %>
      </tbody>
    </table>
  </div>
</div>

<% if @user.id == current_user.id %>
      <p><%# link_to "プロフィール編集", edit_user_path(@user), class: "pull-right" %></p>
<% end %>



