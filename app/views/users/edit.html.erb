<%= form_for(@user) do |f| %>
    <%= f.hidden_field :user_id, :value => current_user.id %>
  <div class="field">
    <label for="name">name</label>
    <%= f.text_field :name %>
    </div>

    <h4>Image</h4>
    <%= f.attachment_field :profile_image, placeholder: "プロフィール画像", class: "user-edit-form" %>

    <%= f.text_area :introduction, autofocus: true, class:"form-control", id:"introduction", placeholder:"紹介文"%>
    <%= f.submit '保存' %>
<% end %>