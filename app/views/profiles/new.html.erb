<section class="slice sct-color-1">
  <div class="container">
    <div class="row">
      <div class="col-md-12">

        <div class="row">
          <div class="col-md-6 col-md-offset-3 profile_form">
            <div class="section-title-wrapper style-1 v1">
              <h3 class="section-title section-title-sm left">
                <span>画像投稿フォーム</span>
              </h3>
            </div>

<!-- <form> -->
<%= form_for(@profile, url: profiles_path) do |f| %>
  <% if @profile.errors.any? %>
    <div id="error_explanation">
      <h2><%= @profile.errors.count %>件のエラーが発生しました。</h2>
      <ul>
      <% @profile.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <div class="row">
    <div class="col-sm-12">

    </div>
  </div>
  <br>
  <div class="row">

    <div class="col-sm-6">
    </div>
  </div>

  <hr>
  <%= f.submit "送信", class:"btn btn-lg btn-block btn-base-1 mt-20" %>
<% end %>
<!-- </form> -->
          </div>
        </div>
      </div>
    </div>
  </div>
</section>